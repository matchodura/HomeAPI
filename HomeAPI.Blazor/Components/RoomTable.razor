@if (Rooms.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Temperature</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Rooms)
            {
            <tr>
                <td class="align-middle">
                    @room.HomeID
                </td>
                <td class="align-middle">
                    @room.Name
                </td>
                <td class="align-middle">
                    @room.Temperature
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-info">Update</button>
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading rooms...
    </span>
}